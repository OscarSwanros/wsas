= simple_form_for car do |f|
  - if car.errors.any?
    #error_explanation
      %h2
        = pluralize(client.errors.count, "error")
        prohibited this car from being saved
      %ul
        - car.errors.full_messages.each do |msg|
          %li= msg

  = f.input :model
  = f.input :brand
  = f.input :car_type
  = f.input :color
  = f.input :kms
  = f.input :plates
  = f.submit
