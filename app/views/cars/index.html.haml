.container
  .page-header
    .row
      .col-xs-6.col-md-11
        %h3
          %span.glyphicon.glyphicon-user
          Automoviles
      .col-xs-6.col-md-1
        %h4
        - if clients.count > 0
          = link_to new_car_path, class: "a addResource" do
            %span.glyphicon.glyphicon-plus
            %span.glyphicon.glyphicon-road
        - else
          = link_to new_client_path, class: "a danger" do
            %span.glyphicon.glyphicon-plus
            %span.glyphicon.glyphicon-user
  %br
  %table.table.dataTable.table-hover
    %thead
      %tr
        %th Id
        %th Modelo
        %th Marca
        %th Tipo de Automovil
        %th Color
        %th Kilometraje
        %th Placas
        %th Due√±o
        %th Acciones
    %tbody
      = render cars
