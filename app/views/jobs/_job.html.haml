%tr
  %td= link_to "#{job.report_number}", job_path(job)
  %td
    - case job.state
    - when "pending"
      %span.label.label-default Pendiente
    - when "running"
      %span.label.label-info En Proceso
    - when "paused"
      %span.label.label-warning Pausado
    - when "finished"
      %span.label.label-success Finalizado
  %td= job.created_at.strftime("%B %-d, %Y, %H:%M")
  %td= job.updated_at.strftime("%B %-d, %Y, %H:%M")
  - if params[:controller] != "welcome"
    %td= job.comments
    %td
      .btn-group
        %button.btn.btn-default.btn-xs.dropdown-toggle{"data-toggle" => "dropdown", :type => "button"}
          Menu
          %span.caret
        %ul.dropdown-menu{:role => "menu"}
          %li= link_to 'Show', job_path(job)
          %li= link_to 'Edit', edit_job_path(job)
          %li.divider
          %li= link_to 'Delete', job_path(job),
                method: :delete,
                data:{ confirm: 'Are you sure?' },
                class: 'label-danger'
