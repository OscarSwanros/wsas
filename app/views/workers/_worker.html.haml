%tr
  %td= worker.id
  %td= link_to "#{worker.name}", worker_path(worker)
  %td= worker.worker_type
  - if params[:controller] != "welcome"
    %td
      .btn-group
        %button.btn.btn-default.btn-xs.dropdown-toggle{"data-toggle" => "dropdown", :type => "button"}
          Menu
          %span.caret
        %ul.dropdown-menu{:role => "menu"}
          %li= link_to 'Ver', worker_path(worker)
          %li= link_to 'Editar', edit_worker_path(worker)
