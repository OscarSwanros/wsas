  .page-header
    .row
      .col-xs-6.col-md-11
        %h3
          %span.glyphicon.glyphicon-user
          Trabajadores
      .col-xs-6.col-md-1
        %h4
          = link_to new_worker_path, class: "a addResource" do
            %span.glyphicon.glyphicon-plus
            %span.glyphicon.glyphicon-wrench
  %br
  %table.table.dataTable.table-hover
