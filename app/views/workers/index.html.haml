.container
  .page-header
    %h2
      %span.glyphicon.glyphicon-search
      Trabajadores
      %small.lead Esta es la lista de sus trabajadores
    %table.table.table-striped
      .row
        .col-xs-6.col-md-2
          = link_to 'Agregar Trabajador', new_worker_path, class: "btn btn-success btn-block"
      %br
      %thead
        %tr
          %th Nombre
          %th Tipo de Trabajador
          %th Acciones
      %tbody
        = render workers
