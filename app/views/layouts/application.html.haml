!!!
%html
  %head
    %meta{:charset => "utf-8"}
    %meta{:content => "NOODP", :name => "ROBOTS"}
    %title= title
    = stylesheet_link_tag :application, :media => 'all'
    = csrf_meta_tags
    %nav.navbar.navbar-default.navbar-fixed-top{:role => "navigation"}
      .container
        .navbar-header
          = link_to 'Taller Tonila', root_path, class: 'navbar-brand'
        #bs-example-navbar-collapse-1.collapse.navbar-collapse
          %ul.nav.navbar-nav
            - if user_signed_in?
              %li.dropdown
                %a.dropdown-toggle{"data-toggle" => "dropdown", href: "#"}
                  Catalogos
                  %b.caret
                %ul.dropdown-menu
                  %li
                    = link_to 'Clientes', clients_path
                  %li
                    = link_to 'Automóviles', cars_path
                  %li
                    = link_to 'Trabajadores', workers_path
                  %li.divider
                  %li
                    = link_to 'Trabajos', jobs_path
          %ul.nav.navbar-nav.navbar-right
            - if user_signed_in?
              %li
                .navbar-text Sesion iniciada como #{current_user.email}
              %li
                = link_to 'Cerrar Sesión', destroy_user_session_path, method: :delete
            - else
              %li{:class => "#{'active' if current_page? (new_user_session_path)}"}
                = link_to 'Iniciar Sesion', new_user_session_path

  %body{:class => body_class}
    = render 'flashes'
    - if notice
      %p.alert.alert-notice= notice
    -if alert
      %p.alert.alert-error= alert
    = yield
    = render 'javascript'
  %footer
    %center
      %h6
        Workshop Admin System
        %br
        Oscar Cisneros
