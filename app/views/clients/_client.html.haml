%tr
  %td= link_to "#{client.name}", client_path(client)
  %td= client.address
  %td= client.zip
  %td= client.phone
  %td= client.rfc
  %td
    .btn-group
      %button.btn.btn-default.btn-xs.dropdown-toggle{"data-toggle" => "dropdown", :type => "button"}
        Menu
        %span.caret
      %ul.dropdown-menu{:role => "menu"}
        %li= link_to 'Show', client_path(client)
        %li= link_to 'Edit', edit_client_path(client)
        %li.divider
        %li= link_to 'Delete', client_path(client),
              method: :delete,
              data:{ confirm: 'Are you sure?' },
              class: 'label-danger'
