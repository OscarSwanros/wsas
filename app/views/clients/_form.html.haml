= simple_form_for client, html: { class: "form-horizontal" } do |f|
  - if client.errors.any?
    #error_explanation
      %h2
        = pluralize(client.errors.count, "error")
        prohibited this client from being saved:
      %ul
        - client.errors.full_messages.each do |msg|
          %li= msg
  = f.input :name, placeholder: "Nombre del Cliente", label: 'Nombre:'
  = f.input :address, placeholder: "Direccion del cliente", label: 'Direccion:'
  = f.input :zip, label: 'Codigo Postal:', placeholder: "28000"
  = f.input :phone, placeholder: "312 31 00 11 88", label: 'Telefono:'
  = f.input :rfc, label: 'RFC:', placeholder: "RFC del cliente"
  = f.input :email, label: 'Correo electronico:', placeholder: "cliente@hotmail.com"
  = f.submit 'Guardar Cliente', class: 'btn btn-success'
