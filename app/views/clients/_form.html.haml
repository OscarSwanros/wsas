= simple_form_for client, html: { class: "form-horizontal" } do |f|
  - if client.errors.any?
    #error_explanation
      %h2
        = pluralize(client.errors.count, "error")
        prohibited this client from being saved:
      %ul
        - client.errors.full_messages.each do |msg|
          %li= msg
  = f.input :name, placeholder: "Nombre del Cliente", label: 'Nombre: '
  = f.input :address, placeholder: "Direccion del cliente", label: 'Direccion: '
  = f.input :zip, label: 'Codigo Postal: '
  = f.input :phone, placeholder: "XXX-XX-X-XX-XX", label: 'Telefono: '
  = f.input :rfc, label: 'RFC:'
  = f.submit 'Guardar Cliente', class: 'btn btn-success'
